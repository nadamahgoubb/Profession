<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:id="@+id/lyt_image"
    app:layout_constraintTop_toTopOf="parent"   >
    <ImageView
        android:id="@+id/img_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginBottom="@dimen/_20sdp"

        android:src="@drawable/walkthrought_0" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/skip"
        android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
        android:paddingHorizontal="@dimen/_20sdp"

        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13sdp" />


</RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_image"
            android:layout_centerHorizontal="true"
             android:gravity="center"
            android:text="@string/services"
            app:layout_constraintTop_toBottomOf="@id/lyt_image"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"         android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_image"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
             app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            android:minLines="2"
            android:singleLine="false"
            android:layout_centerHorizontal="true"
            android:text="@string/alot_of_workers_are_available"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>