<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_8sdp" />
             <gradient
                android:angle="270"
                android:centerColor="@color/deep_orange_50"
                android:centerY="0.75"
                android:endColor="@color/deep_orange_50"
                android:startColor="@color/deep_orange_50" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/gold"
                    android:centerY="0.75"
                    android:endColor="@color/gold"
                    android:startColor="@color/gold" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:endColor="@color/gold"
                    android:startColor="@color/gold" />
            </shape>
        </clip>
    </item>

</layer-list>