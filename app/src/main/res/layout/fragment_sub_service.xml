<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fitsSystemWindows="false"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <Toolbar
                        android:id="@+id/toolBarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="@color/header"
                        android:contentInsetStart="0dp"
                        android:contentInsetStartWithNavigation="0dp"
                        android:fitsSystemWindows="false"
                        android:paddingTop="@dimen/_5sdp"

                        android:popupTheme="@style/ThemeOverlay.MaterialComponents.Dark"
                        app:layout_collapseMode="pin"
                        app:layout_scrollFlags="scroll">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="@dimen/_8sdp"
                            app:layout_collapseMode="pin">


                            <ImageView
                                android:id="@+id/iv_back"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:rotation="180"
                                android:src="@drawable/ic_back_"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </Toolbar>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginTop="?actionBarSize"
                        android:fitsSystemWindows="true"
                        android:paddingBottom="@dimen/_50sdp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="exitUntilCollapsed">


                        <ImageView

                            android:id="@+id/lyt_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_160sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/header_black_profile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                         android:layout_marginTop="@dimen/_19sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="bottom|start"
                        android:src="@drawable/sub"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="exitUntilCollapsed" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <!--   app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"-->


            <com.example.profession.base.OnlyVerticalSwipeRefreshLayout
                android:id="@+id/swiperefresh_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fillViewport="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/lytdata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/lyt_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                   android:visibility="gone"         android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="@string/choose_service_type"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"

                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rec_services"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:itemCount="1"
                                tools:listitem="@layout/item_sub_service" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator

                                android:id="@+id/append_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:indeterminate="true"
                                android:shadowColor="@color/gold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_done"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginVertical="@dimen/_100sdp"
                                android:backgroundTint="@color/gold"
                                android:text="@string/continuee"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                app:cornerRadius="@dimen/_8sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/lyt_data"
                                />

                        </LinearLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lyt_empty_state"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/iv_unauth"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="@dimen/_200sdp"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:src="@drawable/no_services"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_unauth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="@string/no_service"
                                android:textColor="@color/grey_800"
                                android:textSize="@dimen/_13sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_unauth" />

                            <Button
                                android:id="@+id/btn_gohome"
                                android:layout_width="match_parent"

                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/bg_orange_rounded"
                                android:backgroundTint="@color/gold"
                                android:text="@string/goto_main_screen"
                                android:textColor="@color/white"
                                app:layout_constraintTop_toBottomOf="@id/tv_unauth" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.core.widget.NestedScrollView>
            </com.example.profession.base.OnlyVerticalSwipeRefreshLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>