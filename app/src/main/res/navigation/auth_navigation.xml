<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.horizons.profession.ui.fragments.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_walkThrougthFragment"
            app:destination="@id/walkThrougthFragment"
             app:popUpTo="@+id/auth_navigation.xml"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
             app:destination="@id/loginFragment"
            app:popUpTo="@+id/auth_navigation.xml"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/walkThrougthFragment"
        tools:layout="@layout/fragment_walk_througth"
        android:name="com.horizons.profession.ui.fragments.walkThrough.WalkThrougthFragment"
        android:label="WalkThrougthFragment" >
        <action
            android:id="@+id/action_walkThrougthFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/auth_navigation.xml"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.horizons.profession.ui.fragments.auth.Register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.horizons.profession.ui.fragments.auth.login.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.horizons.profession.ui.fragments.auth.ForgetPassword.ForgetPasswordFragment"
        android:label="ForgetPasswordFragment" />
    <fragment
        android:id="@+id/rightsAndTermsFragment2"
        android:name="com.horizons.profession.ui.fragments.terms.RightsAndTermsFragment"
        android:label="RightsAndTermsFragment" />
    <dialog
        android:id="@+id/rightsAndTermDialog"
        android:name="com.horizons.profession.ui.dialog.RightsAndTermDialog"
        android:label="RightsAndTermDialog" />
</navigation>